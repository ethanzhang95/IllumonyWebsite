@{
    ViewData["Title"] = "Contact";
}

<!-- ##### Google Maps ##### -->
<div class="map-area wow fadeInUp" data-wow-delay="300ms">
    <!--<div id="googleMap"></div>-->
</div>

<!-- ##### Contact Area Start ##### -->
<section class="contact-area" style="padding-top:300px">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="contact-content">
                    <div class="row">
                        <div class="col-12">
                            <div class="section-heading text-center mx-auto wow fadeInUp" data-wow-delay="300ms">
                                @*<span>The Best</span>*@
                                <h5>@ViewData["ConfirmMessage"]</h5>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <article class="card-body wow fadeInUp" data-wow-delay="500ms">
                            <form action="~/Home/SendSignupEmail" method="post">
                                <div class="form-row">
                                    <div class="col form-group">
                                        <label>Student First name </label>
                                        <input type="text" id="firstName" name="firstName" class="form-control" placeholder="">
                                    </div> <!-- form-group end.// -->
                                    <div class="col form-group">
                                        <label>Student Last name</label>
                                        <input type="text" id="lastName" name="lastName" class="form-control" placeholder=" ">
                                    </div> <!-- form-group end.// -->
                                </div> <!-- form-row end.// -->
                                <div class="form-row">
                                    <div class="col form-group">
                                        <label>Student Email Address</label>
                                        <input type="email" id="email" name="email" class="form-control" placeholder="">
                                        <small class="form-text text-muted">We'll never share your email with anyone else.</small>
                                    </div> <!-- form-group end.// -->
                                    <div class="col form-group">
                                        <label>Student Phone</label>
                                        <input type="text" id="phone" name="phone" class="form-control" placeholder=" ">
                                        <small class="form-text text-muted">We'll never share your phone with anyone else.</small>
                                    </div> <!-- form-group end.// -->
                                </div> <!-- form-row end.// -->
                                <div class="form-group">
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="gender" value="Male">
                                        <span class="form-check-label"> Male </span>
                                    </label>
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="gender" value="Female">
                                        <span class="form-check-label"> Female</span>
                                    </label>
                                </div> <!-- form-group end.// -->
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label>Grade</label>
                                        <select id="grade" name="grade" class="form-control">
                                            <option value=""> Choose Grade...</option>
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="5">4</option>
                                            <option value="5">5</option>
                                            <option value="6">6</option>
                                            <option value="7">7</option>
                                            <option value="8">8</option>
                                            <option value="9">9</option>
                                            <option value="10">10</option>
                                            <option value="11">11</option>
                                            <option value="12">12</option>
                                        </select>
                                    </div> <!-- form-group end.// -->
                                    <div class="form-group col-md-6">
                                        <label>Courses</label>
                                        <select id="course" name="course" class="form-control">
                                            <option value=""> Choose Courses...</option>
                                            <option value="AIME">AIME</option>
                                            <option value="AMC 10/12">AMC 10/12</option>
                                            <option value="Physics">Physics</option>
                                            <option value="Biology">Biology</option>
                                            <option value="Research Statistics">Research Statistics</option>
                                            <option value="Pre-Algebra">Pre-Algebra</option>
                                            <option value="Fundamental Math">Fundamental Math</option>
                                        </select>
                                    </div> <!-- form-group end.// -->
                                </div> <!-- form-row.// -->
                                <div class="form-group">
                                    <label>Additional Info or Questions</label>
                                    <textarea class="form-control" id="message" name="message" rows="5"></textarea>
                                </div> <!-- form-group end.// -->
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block"> Sign up </button>
                                </div> <!-- form-group// -->
                                <small class="text-muted">By clicking the 'Sign Up' button, you confirm that you accept our <a href="~/Home/Privacy"> Terms of use and Privacy Policy. </a></small>
                            </form>
                        </article> <!-- card-body end .// -->
                        <!-- Contact Information -->

